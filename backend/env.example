# AWS Solution Architect Tool Environment Variables
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_PROFILE=default

# Bedrock Model Configuration
# Use a model ID that supports on-demand throughput, or an inference profile ARN
# Default: anthropic.claude-3-5-sonnet-20240620-v1:0
# Alternative: Use an inference profile ARN from AWS Bedrock console
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
# Maximum tokens for model output (prevents MaxTokensReachedException)
# Claude 3.5 Sonnet supports up to 8192 tokens
# Increase if you need longer responses, decrease to save costs
BEDROCK_MAX_TOKENS=8192

# Anthropic Configuration (fallback if Bedrock not available)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_PORT=3000

# MCP Server Configuration
MCP_SERVER_TIMEOUT=60
MCP_SERVER_RETRY_ATTEMPTS=3

# MCP Client Pool Configuration
# Number of MCP clients to keep in pool per server type
# Higher = better concurrency but more memory usage
# Default: 10 (good for 10-50 concurrent users)
MCP_POOL_SIZE=10
# Maximum seconds to wait for available client from pool
# Default: 30 seconds
MCP_POOL_MAX_WAIT=30.0

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
